<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_h_72"
    android:padding="@dimen/activity_horizontal_margin">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/image_size_40"
        android:layout_height="@dimen/image_size_40"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:src="@drawable/a" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv_icon"
        android:layout_toRightOf="@+id/iv_icon"
        android:text="sdfdfgsdfgsdfg"
        android:textColor="@color/subhead_text_color"
        android:textSize="@dimen/subhead_text_size" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_title"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="@dimen/text_spacing_3"
        android:text="sdfdfgsdfgsdfg"
        android:textColor="@color/caption_text_color"
        android:textSize="@dimen/caption_text_size" />

</RelativeLayout>